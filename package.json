{
  "name": "notificador-electron",
  "version": "1.0.2",
  "main": "main.js",
  "description": "App de escritorio para tareas y notificaciones",
  "author": "Oscar Jim√©nez",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder",
    "publish": "electron-builder --publish=always"
  },
  "build": {
    "appId": "com.lgdev.notificador",
    "productName": "SistemaAlertasCallCenter",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Oscar-lg-partner",
        "repo": "Sistema_Alertas_Call_Center"
      }
    ],
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowToChangeInstallationDirectory": true
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Oscar-lg-partner/Sistema_Alertas_Call_Center"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.6.0",
    "electron-updater": "^6.6.2",
    "mongoose": "^8.16.1",
    "node-notifier": "^10.0.1",
    "nodemailer": "^7.0.4"
  },
  "devDependencies": {
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12"
  }
}
