{
  "name": "notificador-electron",
  "version": "1.0.0",
  "main": "main.js",
  "description": "App de escritorio para tareas y notificaciones",
  "author": "Tu Nombre",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.lgdev.notificador",
    "productName": "SistemaAlertasCallCenter",
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Oscar-lg-partner",
        "repo": "REPO_DEL_PROYECTO"
      }
    ],
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TU_USUARIO_GITHUB/REPO_DEL_PROYECTO"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.6.0",
    "electron": "^37.1.0",
    "electron-updater": "^6.6.2",
    "mongoose": "^8.16.1",
    "node-notifier": "^10.0.1",
    "nodemailer": "^7.0.4"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  }
}
